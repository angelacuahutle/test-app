<div class="flex-col justify-center">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>
  <div class="flex-col">
    <h1 class="font-bold text-3xl mb-4">Find or Add a Teacher</h1>
    <%= link_to 'Add a Teacher', new_teacher_path, class: "rounded-lg w-48 py-3 px-5 bg-blue-600 text-white block font-medium", id:'create_teacher' %>
  </div>

  <div class="flex justify-end mb-1">
    <%= form_with url: list_teachers_path, method: :get do |form| %>
      <%= form.text_field :name, placeholder: "Search by name", value: params[:name], class: "border border-blue-500 rounded p-2" %>
      <%= form.button "Search", class: "bg-blue-500 text-white p-2 rounded-sm" %>
    <% end %>
  </div>
  <div class="flex-col justify-center">
    <%= render 'teachers', teachers: @teachers %>
  </div>
