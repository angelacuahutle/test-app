<%= turbo_frame_tag "teachers", class: "shadow overflow-hidden rounded border-b border-gray-200" do %>
  <table class="table-auto border border-blue-200 rounded-md mt-4 flex-col w-full">
    <thead class='bg-blue-500 text-white'>
      <tr class= "">
        <th class="border border-blue-300" id='teachers-name'>
          <%= sort_link('name', "Teacher Name")%>
          <%= sort_indicator if params[:column] == "teacher name" %>
        </th>
        
        <th class="border border-blue-300" id='teachers-school'>
          <%= sort_link('school',"School")%>
          <%= sort_indicator if params[:column] == "shool" %>
        </th>
       
        <th class="border border-blue-300" id='teachers-year'>
          <%= sort_link('year',"School Year")%>
           <%= sort_indicator if params[:column] == "year" %>
        </th>
     
      </tr>
    </thead>
    <% teachers.each do |teacher| %>
      <tbody>
        <tr class= "border-collapse border border-indigo-400">
          <td class="border border-blue-400 bg-slate-200"><%= teacher.name%></td>
          <td class="border border-blue-400 bg-slate-200"><%=teacher.school %></td>
          <td class="border border-blue-400 bg-slate-200"><%=teacher.year %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>